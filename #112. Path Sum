class Solution:
    def hasPathSum(self, root, sum):
        """
        :type root: TreeNode
        :type sum: int
        :rtype: bool
        """
        if root is None:
            return False
        
        flag = 0
        
        tmpleft = root.left
        if tmpleft is not None:
            flag = 1
            if tmpleft.left is None and tmpleft.right is None:
                if root.val + tmpleft.val == sum:
                    return True
            else:
                if self.hasPathSum(tmpleft, sum - root.val):
                    return True
        
        tmpright = root.right
        if tmpright is not None:
            flag = 1
            if tmpright.left is None and tmpright.right is None:
                if root.val + tmpright.val == sum:
                    return True
            else:
                if self.hasPathSum(tmpright, sum - root.val):
                    return True
        
        if flag == 1:
            return False
        else:
            return root.val == sum
